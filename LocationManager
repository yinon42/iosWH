import Foundation
import CoreLocation

class LocationManager: NSObject, ObservableObject, CLLocationManagerDelegate {
    private let manager = CLLocationManager()
    @Published var userLongitude: Double? = nil

    override init() {
        super.init()
        manager.delegate = self
        print("üì° LocationManager initialized ‚Äì requesting location access")

        manager.requestWhenInUseAuthorization()

        DispatchQueue.main.asyncAfter(deadline: .now() + 0.3) {
            print("üìç Starting location updates...")
            self.manager.startUpdatingLocation()
        }
    }

    func locationManager(_ manager: CLLocationManager, didUpdateLocations locations: [CLLocation]) {
        guard let location = locations.first else {
            print("‚ö†Ô∏è No location data received")
            return
        }

        let long = location.coordinate.longitude
        print("üìç Location received: longitude = \(long)")

        DispatchQueue.main.async {
            self.userLongitude = long
        }
    }

    func locationManager(_ manager: CLLocationManager, didFailWithError error: Error) {
        print("‚ùå Failed to get location: \(error.localizedDescription)")
    }
}
